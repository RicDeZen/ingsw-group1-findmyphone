<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ingsw.group1.findmyphone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".AlarmAndLocateResponseActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ContactListActivity" />
        <activity android:name=".activity.CreateContactActivity" />

        <receiver
            android:name=".KillerAppClosedReceiver"
            android:label="KillerAppClosedReceiver">
            <intent-filter>
                <action android:name="FORCE_WAKE"/>
            </intent-filter>

        </receiver>
    </application>

</manifest>